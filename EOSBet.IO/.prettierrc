{
  "$schema": "http://json.schemastore.org/prettierrc",
  "overrides": [
    {
      "files": ["*.js", "*.jsx", "*.ts", "*.sol", "*.json", "*.css"],
      "options": {
        "printWidth": 140,
        "tabWidth": 2,
        "semi": true,
        "singleQuote": true,
        "jsxSingleQuote": true,
        "bracketSpacing": true,
        "bracketSameLine": false,
        "endOfLine": "auto",
        "arrowParens": "avoid",
        "proseWrap": "always",
        "quoteProps": "as-needed",
        "trailingComma": "none",
        "embeddedLanguageFormatting": "auto",
        "useTabs": false
      }
    }
  ]
}
